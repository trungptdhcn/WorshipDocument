<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:id="@+id/detail_item_llZom_In_Out"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/toptitle"
            >

        <ImageView
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@drawable/bkgrnd"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                />

        <ImageView
                android:id="@+id/detail_layout_btZoomIn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/ic_action_bar_zoom_in"
                android:button="@null"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                />
        <ImageView
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@drawable/bkgrnd"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                />

        <ImageView
                android:id="@+id/detail_layout_btZoomOut"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/ic_action_bar_zoom_out"
                android:button="@null"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                />
        <ImageView
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@drawable/bkgrnd"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                />

        <ImageView
                android:id="@+id/detail_layout_btShare"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/ic_action_bar_share"
                android:button="@null"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                />
        <ImageView
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@drawable/bkgrnd"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                />

        <ImageView
                android:id="@+id/detail_layout_btHome"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/ic_action_bar_home"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                />
        <!--<ImageView-->
        <!--android:id="@+id/detail_item_btCopy"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@drawable/ic_action_bar_copy"-->
        <!--android:layout_margin="5dp"-->
        <!--/>-->
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                >
            <RelativeLayout
                    android:id="@+id/detail_item_rlContainerContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <ImageView
                        android:id="@+id/detail_item_ivImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        />
                <WebView
                        android:id="@+id/detail_item_wvContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/detail_item_ivImage"
                        android:background="@drawable/common_bg"
                        android:layout_centerHorizontal="true"
                        />
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>