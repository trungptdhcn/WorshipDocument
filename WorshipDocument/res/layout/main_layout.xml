<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/officalbackground">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/toptitle"
                android:layout_alignParentTop="true"
                >
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/topbottomtitle"
                android:layout_alignParentBottom="true"
                >
            <ImageView
                    android:id="@+id/main_layout_bt1"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:src="@drawable/one"
                    android:layout_weight="1"
                    />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bkgrnd"
                    android:layout_gravity="center"
                    />
            <ImageView
                    android:id="@+id/main_layout_bt2"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:src="@drawable/two"
                    android:layout_weight="1"
                    />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bkgrnd"
                    android:layout_gravity="center"
                    />
            <ImageView
                    android:id="@+id/main_layout_bt3"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:src="@drawable/three"
                    android:layout_weight="1"
                    />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bkgrnd"
                    android:layout_gravity="center"
                    />
            <ImageView
                    android:id="@+id/main_layout_bt4"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:src="@drawable/four"
                    android:layout_weight="1"
                    />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>