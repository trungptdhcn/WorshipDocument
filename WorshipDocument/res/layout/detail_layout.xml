<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/common_bg">
    <LinearLayout
            android:id="@+id/detail_layout_llContainerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toptitle"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/detail_layout_btZom_In"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/ic_action_bar_zoom_in"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                />
        <ImageView
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@drawable/bkgrnd"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                />
        <ImageView
                android:id="@+id/detail_layout_btZom_Out"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/ic_action_bar_zoom_out"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                />
        <ImageView
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@drawable/bkgrnd"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                />
        <ImageView
                android:id="@+id/detail_layout_btBookmark"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/ic_action_bar_bookmark_off"
                android:button="@null"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                />
        <ImageView
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@drawable/bkgrnd"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                />
        <ImageView
                android:id="@+id/detail_layout_btShare"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/ic_action_bar_share"
                android:button="@null"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                />
        <ImageView
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@drawable/bkgrnd"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                />
        <ImageView
                android:id="@+id/detail_layout_btCopy"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/ic_action_bar_copy"
                android:button="@null"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                />
        <ImageView
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@drawable/bkgrnd"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                />
        <ImageView
                android:id="@+id/detail_layout_btHome"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/ic_action_bar_home"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/detail_layout_llTitle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/topbottomtitle"
            android:layout_below="@+id/detail_layout_llContainerButton"
            android:gravity="center">
        <TextView
                android:id="@+id/detail_layout_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/detail_layout_llControl"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/laundry_cart_bt"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            >
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/detail_layout_btFirst"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:src="@drawable/first"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    />
            <ImageView
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bkgrnd"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    />
            <ImageView
                    android:id="@+id/detail_layout_btPrevious"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:src="@drawable/previous"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    />
            <ImageView
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bkgrnd"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    />
            <ImageView
                    android:id="@+id/detail_layout_btNext"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:src="@drawable/sound_play"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    />

            <ImageView
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bkgrnd"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    />
            <ImageView
                    android:id="@+id/detail_layout_btLast"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:src="@drawable/last"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    />
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
            android:id="@+id/myfivepanelpager"
            android:layout_below="@+id/detail_layout_llTitle"
            android:layout_above="@+id/detail_layout_llControl"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"/>

</RelativeLayout>